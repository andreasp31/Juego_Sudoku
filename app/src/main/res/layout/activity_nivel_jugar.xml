<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NivelJugar"
    android:background="@color/white">

    <Button
        android:id="@+id/botonVolver"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:backgroundTint="#b2b0e7"
        android:text="Volver"
        android:textColor="#1a2a7f"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.895"
        android:onClick="volverMenu"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="259dp"
        android:layout_height="43dp"
        android:text="Selecciona el nivel de dificultad al que quieres jugar!"
        android:textAlignment="center"
        android:textColor="#1a2a7f"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.32" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="236dp"
        android:layout_height="132dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.146"
        app:srcCompat="@drawable/logo_sudoku" />

    <Button
        android:id="@+id/botonNivelF"
        android:layout_width="198dp"
        android:layout_height="68dp"
        android:backgroundTint="#3b38a0"
        android:text="Nivel FÁCIL"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.478"
        android:onClick="irNombreF"/>

    <Button
        android:id="@+id/botonNivelM"
        android:layout_width="198dp"
        android:layout_height="68dp"
        android:backgroundTint="#3b38a0"
        android:text="Nivel MEDIO"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.598"
        android:onClick="irNombreM"/>

    <Button
        android:id="@+id/botonNivelD"
        android:layout_width="198dp"
        android:layout_height="68dp"
        android:backgroundTint="#3b38a0"
        android:text="Nivel DIFÍCIL"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.717"
        android:onClick="irNombreD"/>
</androidx.constraintlayout.widget.ConstraintLayout>