<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GuardarJugadorF"
    android:background="@color/white">

    <Button
        android:id="@+id/botonVolver6"
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:backgroundTint="#3b38a0"
        android:text="¡EMPEZAR!"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.621"
        android:onClick="irSudoku"/>

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="236dp"
        android:layout_height="132dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.146"
        app:srcCompat="@drawable/logo_sudoku" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="258dp"
        android:layout_height="52dp"
        android:text="Escribe el nombre con el que quieras jugar para poder ver en que posición quedaste en el modo FÁCIL."
        android:textAlignment="center"
        android:textColor="#1a2a7f"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.32" />

    <Button
        android:id="@+id/botonVolver5"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:backgroundTint="#b2b0e7"
        android:onClick="volverMenu"
        android:text="Volver"
        android:textColor="#1a2a7f"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.895" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/apodo"
        android:layout_width="277dp"
        android:layout_height="60dp"
        android:backgroundTint="#1a2a7f"
        android:hint="Nombre"
        android:textAlignment="center"
        android:textColor="#1a2a7f"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.479" />

</androidx.constraintlayout.widget.ConstraintLayout>